generator client {
    provider = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
}

datasource db {
    provider     = "sqlite"
    url          = "file:./dev.db"
}

//For local
// url          = "file:./dev.db"


model videoCard {
    id        String   @id @default(cuid())
    itemName  String
    memory    Int
    chipset   String?
    store     String
    link      String
    price     Decimal
    image     String?
}

model cpu {
    id         String   @id @default(cuid())
    itemName   String
    coreCount  Int
    coreClock  Decimal?
    socket     String?
    store      String
    link       String
    price      Decimal
    image      String?
}

model cpuCooler {
    id         String   @id @default(cuid())
    itemName   String
    size       String?
    store      String
    link       String
    price      Decimal
    image      String?
}

model motherBoard {
    id            String   @id @default(cuid())
    itemName      String
    socket        String?
    formFactor    String?
    memorySlots   Int?
    memoryMax     Int?
    store         String
    link          String
    price         Decimal
    image         String?
}

model memory {
    id         String   @id @default(cuid())
    itemName   String
    speed      String?
    modules    String?
    store      String
    link       String
    price      Decimal
    image      String?
}

model storage {
    id          String   @id @default(cuid())
    itemName    String
    capacity    Int
    type        String
    formFactor  String?
    interface   String?
    store       String
    link        String
    price       Decimal
    image       String?
}

model towerCase {
    id         String   @id @default(cuid())
    itemName   String
    type       String?
    color      String?
    store      String
    link       String
    price      Decimal
    image      String?
}

model psu {
    id         String   @id @default(cuid())
    itemName   String
    type       String?
    wattage    Int
    color      String?
    store      String
    link       String
    image      String?
    price      Decimal
}

model monitor {
    id            String   @id @default(cuid())
    itemName      String
    size          Decimal
    resolution    String
    refreshRate   Int
    responseTime  Decimal?
    panelType     String?
    aspectRatio   String?
    store         String
    link          String
    price         Decimal
    image         String?
}
